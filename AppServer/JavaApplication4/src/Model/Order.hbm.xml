<?xml version="1.0"?><!DOCTYPE hibernate-mapping
PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
<class name="Model.Order" table="orders">
    
<composite-id name="orderID">
<key-property name="orderID" column="order_id" />
<key-property name="fromDate" column="from_date" />
</composite-id>



<property name="senderID" type="long" not-null="true" column="sender_id" />
<property name="receiverID" type="long" not-null="true" column="receiver_id" />
<property name="billingCurrency" type="string" not-null="true" column="billing_currency" />
<property name="billingValue" type="float" column="billing_value" />
<property name="collectionDate" type="date" column="collection_date" />
<property name="timeStp" type="date" column="time_stp" />
<property name="toDate" type="date" column="to_date" />
</class>

<class name="Model.OrderStatus" table="order_status">
<composite-id name="orderID">
<key-property name="orderID" column="order_id" />
<key-property name="fromDate" column="from_date" />
</composite-id>
<property name="status" type="string" column="status" />
<property name="comment" type="string" column="comment" />
<property name="toDate" type="date" column="to_date" />
</class>

</hibernate-mapping>