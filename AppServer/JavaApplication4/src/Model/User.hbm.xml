<?xml version="1.0"?><!DOCTYPE hibernate-mapping
PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
<class name="Model.User" table="user">
<id name="userID" type="long" column="user_id">
<generator class="increment"/>
</id>
<property name="firstName" type="string" not-null="true" column="first_name" />
<property name="lastName" type="string" not-null="true" column="last_name" />
<property name="role" type="int" not-null="true" column="role" />
<property name="password" type="string" column="password" />
<property name="isActive" type="boolean" column="is_active" />
<property name="timeStp" type="date" column="time_stp" >
</property>
</class>
</hibernate-mapping>